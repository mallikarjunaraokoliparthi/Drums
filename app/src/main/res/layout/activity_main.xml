<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.indpgamesandapps.drums.MainActivity">

    <Button
        android:id="@+id/imageButton"
        android:layout_width="125dp"
        android:layout_height="141dp"
        android:layout_above="@+id/imageButton4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:background="@drawable/drums"
        android:onClick="playDrums"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/drums"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/imageButton2"
        android:layout_width="125dp"
        android:layout_height="141dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageButton"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"

        android:background="@drawable/plats"
        android:onClick="playPlats"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/plats"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/imageButton3"
        android:layout_width="125dp"
        android:layout_height="141dp"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton4"
        android:background="@drawable/gitar"
        android:onClick="playGitar"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/gitar"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="198dp" />

    <Button
        android:id="@+id/imageButton4"
        android:layout_width="125dp"
        android:layout_height="141dp"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_centerVertical="true"
        android:background="@drawable/horn"
        android:onClick="playHorn"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/horn"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="198dp" />

    <Button
        android:id="@+id/imageButton5"
        android:layout_width="125dp"
        android:layout_height="141dp"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_alignTop="@+id/imageButton6"
        android:background="@drawable/piano"
        android:onClick="playPiano"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/piano"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="360dp" />

    <Button
        android:id="@+id/imageButton6"
        android:layout_width="125dp"
        android:layout_height="141dp"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageButton4"
        android:layout_marginBottom="20dp"
        android:background="@drawable/keyboard"
        android:onClick="playKeyboard"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/keyboard"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="360dp" />

</RelativeLayout>
